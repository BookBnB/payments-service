{
  "name": "bookbnb-payments",
  "version": "1.0.0",
  "description": "Servicio de pagos para BookBnB",
  "main": "index.js",
  "scripts": {
    "devStart": "npm run migration:run && ROOT_DIR=./build/src concurrently --kill-others 'npm run build:watch' 'wait-on ./build/src/App.js && nodemon --watch build/src -r source-map-support/register ./build/src/App.js'",
    "start": "dotenv -- typeorm migration:run && node ./build/App.js",
    "build": "npm run clean && ttsc",
    "build:watch": "npm run clean && ttsc --watch --inlineSourceMap --preserveWatchOutput",
    "clean": "rm -rf build",
    "test": "npm run test:unit && npm run test:aceptance",
    "test:unit": "mocha --config config/.mocharc.json",
    "test:unit:fast": "mocha --config config/.mocharc.fast.json",
    "test:aceptance": "cucumber-js --require-module @wessberg/di-compiler/register 'features/**/*.feature' -r features/hooks.ts -r features/**/steps/*.ts --format progress-bar --exit --tags 'not @wip'",
    "test:aceptance:fast": "ROOT_DIR=./build/src cucumber-js 'features/**/*.feature' -r build/features/hooks.js -r build/features/**/steps/*.js --require-module source-map-support/register --format progress-bar --exit --tags 'not @wip'",
    "test:coverage": "rm -rf coverage && nyc --nycrc-path config/nycrc-config.json npm run test",
    "typeorm": "dotenv -- ts-node ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run --",
    "migration:revert": "npm run typeorm migration:revert --"
  },
  "author": "seblaz mpicco FrancoMaz franfusaro",
  "license": "ISC",
  "dependencies": {
    "@truffle/hdwallet-provider": "^1.1.1",
    "axios": "^0.21.0",
    "bip39": "^3.0.3",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^2.0.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "dotenv-expand": "^5.1.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "log4js": "^6.3.0",
    "multer": "^1.4.2",
    "pg": "^8.4.1",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.6",
    "routing-controllers-openapi": "^2.1.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.28",
    "web3": "^1.3.0",
    "@wessberg/di": "^2.0.3"
  },
  "devDependencies": {
    "@wessberg/di-compiler": "^2.1.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.13",
    "@types/chai-subset": "^1.3.3",
    "@types/cors": "^2.8.8",
    "@types/cucumber": "^6.0.1",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^8.0.3",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.11.8",
    "@types/sinon": "^9.0.8",
    "@types/sinon-chai": "^3.2.5",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chai-subset": "^1.6.0",
    "codecov": "^3.8.0",
    "concurrently": "^5.3.0",
    "cucumber": "^6.0.5",
    "cucumber-pretty": "^6.0.0",
    "lodash": "^4.17.20",
    "mocha": "^8.1.3",
    "msw": "^0.21.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "sinon": "^9.2.0",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "sqlite3": "^5.0.0",
    "ts-node": "^9.0.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.0.3",
    "uuid": "^8.3.1",
    "wait-on": "^5.2.0"
  }
}
